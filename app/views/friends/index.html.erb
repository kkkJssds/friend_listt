<p style="color: green"><%= notice %></p>

<h1>Friends List</h1>
<table class="table table-striped table table-hover table-bordered">
  <thead class="dark">
    <tr>
      <th scope="col">First_name</th>
      <th scope="col">Last_name</th>
      <th scope="col">email</th>
      <th scope="col">phone</th>
      <th scope="col">twitter</th>
     
    </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>
    <tr>
         <td><%= friend.first_name %>
          </td>
          <td><%= friend.last_name %>
          </td>
          <td><%= friend.email %>
          </td>
          <td><%= friend.phone %>
          </td>
          <td><%= friend.twitter %>
          </td>
          <td><%= link_to 'Show',friend %>
           </td>
           <td><%= link_to 'Edit',edit_friend_path(friend)%>
           </td>
           <td><%= link_to 'Destroy',friend,method: :delete,data:{confirm:'Are You Sure?'}%>
           </td>
           
           <%end%>
           </tbody>
           
           </table>


<br>
<%= link_to 'New friend',new_friend_path,class:"btn btn-primary" %>
